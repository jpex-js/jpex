{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "types": [ "mocha", "node" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src",
    "@types"
  ]
}
